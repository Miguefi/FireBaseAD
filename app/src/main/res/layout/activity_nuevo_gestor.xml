<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".NuevoGestor">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_nuevo_gestor"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_foreground" />

        <EditText
            android:id="@+id/dni"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DNI/NIE"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />
        <TextView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de identificación no válido"
            android:textColor="@color/carrot_orange"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/dni"
            android:layout_marginTop="-30dp"/>

        <EditText
            android:id="@+id/contraseña"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />
        <TextView
            android:id="@+id/alertC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Obligatorio"
            android:textColor="@color/carrot_orange"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/dni"
            android:layout_marginTop="-30dp"/>

        <EditText
            android:id="@+id/nombre"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />
        <TextView
            android:id="@+id/alertN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Obligatorio"
            android:textColor="@color/carrot_orange"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/dni"
            android:layout_marginTop="-30dp"/>

        <EditText
            android:id="@+id/apellido"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />
        <TextView
            android:id="@+id/alertA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Obligatorio"
            android:textColor="@color/carrot_orange"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/dni"
            android:layout_marginTop="-30dp"/>

        <EditText
            android:id="@+id/telefono"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono Móvil"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />
        <TextView
            android:id="@+id/alert2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de teléfono móvil no válido"
            android:textColor="@color/carrot_orange"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/dni"
            android:layout_marginTop="-30dp"/>

        <Button
            android:id="@+id/crear"
            android:layout_width="@dimen/ancho_cajas_texto"
            android:layout_height="@dimen/alto_boton"
            android:backgroundTint="#00000000"
            android:text="Crear cuenta"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2.5dp" />
        <TextView
            android:id="@+id/alertVerifyDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ya existe una cuenta con ese DNI/NIE"
            android:textColor="@color/carrot_orange"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/dni"
            android:layout_marginTop="-28dp"/>
        <TextView
            android:id="@+id/alertVerifyTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Número móvil ya registrado"
            android:textColor="@color/carrot_orange"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/dni"
            android:layout_marginTop="-25dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>