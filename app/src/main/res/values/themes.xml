<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FireBaseAD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/gradient</item>
        <item name="background">@drawable/gradient</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cobalt_blue</item>
        <item name="colorPrimaryVariant">@color/early_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/oxford_blue</item>
        <item name="colorSecondaryVariant">@color/cobalt_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/earlie_black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.FireBaseAD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.FireBaseAD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FireBaseAD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>